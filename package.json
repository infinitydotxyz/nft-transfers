{
  "name": "nft-transfers",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "build": "npm run update:lib && npm run clean && tsc",
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"./src/**/*.ts\" --fix",
    "prepare": "npx husky install",
    "start": "npx cross-env NODE_PATH=./dist node -r dotenv/config ./dist/index.js",
    "start:prod": "cross-env npm run build && node -r dotenv/config ./dist/index.js",
    "start:dev": "cross-env HOST=localhost cross-env NODE_PATH=./src ts-node-dev -r dotenv/config ./src/index.ts",
    "update:lib": "npm install @infinityxyz/lib@latest",
    "script": "cross-env NODE_PATH=./src ts-node-dev -r dotenv/config ./src/scripts/createOrder.ts",
    "deploy:dev": "npm run build && gcloud app deploy -q --appyaml=./app.yaml --project=nftc-dev",
    "deploy:prod": "npm run build && gcloud app deploy -q --appyaml=./app.yaml --project=nftc-infinity",
    "pre:push": "npm run format && npm run lint && npm run build"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "src/**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@alch/alchemy-web3": "^1.4.4",
    "@infinityxyz/lib": "^1.132.0",
    "chalk": "^4.1.2",
    "dotenv": "^16.0.0",
    "emittery": "^0.10.2",
    "ethers": "^5.6.4",
    "express": "^4.17.3",
    "firebase-admin": "^10.0.2",
    "graphql-request": "^4.3.0"
  }
}
